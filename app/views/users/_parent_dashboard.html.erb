<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h1>Welcome <%= @parent.username %></h1>
      <% wallets.each do |wallet| %>
      <div class="card my-4">
        <h2>Wallet of <%= wallet.kid.username %></h2>

        <% if policy(wallet.kid).destroy? %>
          <%= link_to "Destroy kid", destroy_user_path(wallet.kid.id), method: :delete %>
        <% end %>

        <% if policy(wallet).edit? %>
          <%= link_to "Edit Wallet", edit_wallet_path(wallet.id) %>
        <% end %>

        <% if policy(current_user).dashboard? %>
        <%= link_to "Dashboard of #{wallet.kid.username}", dashboard_user_path(wallet.kid.id) %>
        <% end %>

      </div>
      <% end %>
      <%= link_to "Create a child", new_user_path %>
    </div>
  </div>
</div>

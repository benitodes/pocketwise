<h1>Users#new</h1>
<p>Find me in app/views/users/new.html.erb</p>

<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= simple_form_for @user, url: create_user_path do |f| %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :username %>
        <%= f.input :avatar %>
        <%= f.input :gender %>
        <%= f.input :age %>
        <%= f.button 'submit' %>
      <% end %>
    </div>
  </div>
</div>

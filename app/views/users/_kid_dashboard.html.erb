   <h2>Goals</h2>
  <div class="scrolling-wrapper">
        <% unless @goals.nil? %>
                    <% @goals.each do |goal| %>
                    <div class="card card-goal">
                      <div class="">
                        <%= cl_image_tag goal.picture, height: 250, width: 314, crop: :fill %>
                      </div>
                      <div class="p-2">
                        <h2><%= goal.name %></h2>
                      </div>
                      <% if goal.complete? %>
                      <div class="p-2">
                        <p>Good Job!<p>
                        <p>Target reached already congratulation</p>
                        <p>You saved a total of <%= goal.goal_current_saving %></p>
                        <div class="mb-4">
                       </div>
                      </div>
                      <% else %>
                       <div class="p-2">
                         <p>You are saving <%= goal.goal_allowance %>$ weekly.</p>
                         <p>Right now you have saved <%= goal.goal_current_saving %>$</p>
                         <p>Your target is <%= goal.goal_price %>$</p>
                       </div>
                       <div class="mb-4">
                        <%= link_to 'EDIT', edit_goal_path(goal.id), class: "button-white edit-button-goal"%>
                       </div>
                      <% end %>
                      <div class="chart" data-percent="<%= @goal_percentage %>"><%= @goal_percentage %>%</div>

                    </div>

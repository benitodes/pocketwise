<!-- inline css -->

<style>
body {
  background-color: #D4A2E3;
  color: white; }
h1 {
  font-size: 40px;
  font-weight: bold;
  margin-bottom: 20px;
  text-align: center;
}
p {
  font-size: 20px
  padding: 20px; }
a {
  font-size: 16px;
  color: white; }
.simple_form {
  text-align: left;
}
</style>

<!-- Html -->

<div class="container-devise">

<h1>Log in</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 my-2 d-flex justify-content-around">
        <div class="form-actions">
          <%= f.button :submit, "LOG IN", class: "button-red" %>
        </div>
<% end %>
         <%= render "devise/shared/links" %>
      </div>
      <%= link_to "BACK", root_path, class: "button-white" %>
    </div>
  </div>
</div>

<!-- inline css -->

<style>
body {
  background-color: #E3E8EB;
}
.header {
  color: #505050;
}
.level-description {
  padding:12px;
}
</style>

<!-- end inline css -->

<div class="container-main">

       <!-- Add these lines if you need the back button menu -->
    <div class="container-header">
      <div class="header-back">
        <button onclick="window.history.back()">
          <i class="fas fa-chevron-left"></i>
        </button>
      </div>
        <div class="header-text">
          <h1 class ="header"><%= @course.name  %></h1>
        </div>
        <div class="header-avatar">
          <label for="offcanvas" class="toggler"><%= cl_image_tag current_user.avatar, crop: :fill, for: "offcanvas", class: "avatar" %></label>
        </div>
  </div>

   <!-- End menu -->

  <div class="card-course d-flex flex-column">
    <div>
       <%= cl_image_tag @course.picture, width: 350, height: 250, crop: :fill %>
    </div>
    <div class=" mt-4 d-flex justify-content-center align-items-center">
      <div class="p-2" style="font-size: 18px; color:#505050; font-weight: bold">
        Level <%= @level.number %>: <%= @level.name %>
      </div>
    </div>
      <div class="level-description">
          <p>HTML is the foundation of all web pages. Without it, you wouldnâ€™t be able to organize text or add images or videos to your web pages. HTML is the beginning of everything you need to know to create engaging web pages!</p>
      </div>
    <div class="p-2 d-flex justify-content-between" style="margin: 2rem !important;">
    <%= link_to "LECTURE", level_lecture_path(@level, @level.lectures.first), class: 'btn button-red button-level' %>
    <!-- user should only be able to practice once lectures complete (or level or course complete) -->
    <% if @lectures_complete  %>
      <%= link_to "PRACTICE", level_question_path(@level, @level.questions.first), class: "btn button-red button-level" %>
    <% else %>
      <a href="#" class="btn button-red disabled" style="color: grey; font-size: 16px;"  role="button" aria-disabled="true">PRACTICE</a>
    <% end %>
  </div>

</div>




